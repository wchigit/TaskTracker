{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "languageVersion": "2.0",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.37.4.10188",
      "templateHash": "5044535543136482879"
    }
  },
  "parameters": {
    "name": {
      "type": "string",
      "defaultValue": "[format('aca_{0}', uniqueString(resourceGroup().id))]"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "secrets": {
      "type": "array",
      "defaultValue": []
    },
    "containerName": {
      "type": "string",
      "defaultValue": "main"
    },
    "containerImage": {
      "type": "string",
      "defaultValue": "mcr.microsoft.com/azuredocs/containerapps-helloworld:latest"
    },
    "containerEnv": {
      "type": "array",
      "defaultValue": []
    },
    "containerAppEnvId": {
      "type": "string"
    },
    "containerRegistryName": {
      "type": "string"
    },
    "targetPort": {
      "type": "int",
      "defaultValue": 80
    },
    "tags": {
      "type": "object",
      "defaultValue": {}
    },
    "identityType": {
      "type": "string",
      "defaultValue": "SystemAssigned"
    },
    "userAssignedIdentities": {
      "type": "object",
      "defaultValue": {}
    }
  },
  "resources": {
    "containerRegistry": {
      "existing": true,
      "type": "Microsoft.ContainerRegistry/registries",
      "apiVersion": "2023-07-01",
      "name": "[parameters('containerRegistryName')]"
    },
    "containerApp": {
      "type": "Microsoft.App/containerApps",
      "apiVersion": "2023-05-01",
      "name": "[parameters('name')]",
      "location": "[parameters('location')]",
      "identity": {
        "type": "[parameters('identityType')]",
        "userAssignedIdentities": "[if(contains(parameters('identityType'), 'UserAssigned'), parameters('userAssignedIdentities'), null())]"
      },
      "properties": {
        "environmentId": "[parameters('containerAppEnvId')]",
        "configuration": {
          "ingress": {
            "external": true,
            "targetPort": "[parameters('targetPort')]"
          },
          "registries": [
            {
              "server": "[reference('containerRegistry').loginServer]",
              "username": "[parameters('containerRegistryName')]",
              "passwordSecretRef": "acr-password"
            }
          ],
          "secrets": "[concat(createArray(createObject('name', 'acr-password', 'value', listCredentials('containerRegistry', '2023-07-01').passwords[0].value)), parameters('secrets'))]"
        },
        "template": {
          "containers": [
            {
              "name": "[parameters('containerName')]",
              "image": "[parameters('containerImage')]",
              "env": "[parameters('containerEnv')]"
            }
          ]
        }
      },
      "tags": "[parameters('tags')]",
      "dependsOn": [
        "containerRegistry"
      ]
    }
  },
  "outputs": {
    "id": {
      "type": "string",
      "value": "[resourceId('Microsoft.App/containerApps', parameters('name'))]"
    },
    "name": {
      "type": "string",
      "value": "[parameters('name')]"
    },
    "identityPrincipalId": {
      "type": "string",
      "value": "[reference('containerApp', '2023-05-01', 'full').identity.principalId]"
    },
    "outboundIps": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "value": "[reference('containerApp').outboundIpAddresses]"
    },
    "requestUrl": {
      "type": "string",
      "value": "[reference('containerApp').configuration.ingress.fqdn]"
    }
  }
}